rom isoprene oxidation across NO x regimes},
author = {Wolfe, G M and Kaiser, J and Hanisco, T F and Keutsch, F N and Gouw, J A De and Gilman, J B and Graus, M and Hatch, C D},
doi = {10.5194/acp-16-2597-2016},
file = {:home/jesse/Documents/Papers_MD/Wolfe et al._2016_Formaldehyde production from isoprene oxidation.pdf:pdf},
isbn = {1625972016},
journal = {Atmospheric Chemistry and Physics},
