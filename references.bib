pages = {689--735},
publisher = {Pergamon},
title = {{A linearized discrete ordinate radiative transfer model for atmospheric remote-sensing retrieval}},
url = {https://www.sciencedirect.com/science/article/pii/S0022407300000558},
volume = {68},
year = {2001}
}
