doi = {10.1002/2014JD022787},
file = {:home/jesse/Documents/Papers_MD/{\v{S}}kerlak et al._2015_Tropopause folds in ERA-Interim Global climatology and relation to extreme weather events.pdf:pdf},
isbn = {2169-897x},
issn = {21698996},
journal = {Journal of Geophysical Research},
keywords = {ERA-Interim,climatology,extreme weather,tropopause fold},
number = {10},
pages = {4860--4877},
title = {{Tropopause folds in ERA-Interim: Global climatology and relation to extreme weather events}},
volume = {120},
year = {2015}
}
@article{Lelieveld2009,
