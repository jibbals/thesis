issn = {1680-7324},
journal = {Atmospheric Chemistry and Physics Discussions},
number = {6},
pages = {7139--7166},
title = {{Technical Note: The Modular Earth Submodel System (MESSy) – a new approach towards Earth System Modeling}},
volume = {4},
year = {2004}
}
