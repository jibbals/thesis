isbn = {0148-0227},
issn = {01480227},
journal = {Journal of Geophysical Research},
keywords = {Biomass burning,Smoke,Transport of smoke},
pages = {D20204},
title = {{Transport of biomass burning emissions from southern Africa}},
volume = {109},
year = {2004}
}
