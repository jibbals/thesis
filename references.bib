file = {:home/jesse/Documents/Papers_MD/Kuang et al._2017_Summertime tropospheric ozone enhancement associated with a cold front passage due to stratosphere-to-troposphere tran.pdf:pdf},
issn = {21698996},
journal = {Journal of Geophysical Research: Atmospheres},
keywords = {,SENEX,biomass burning,lidar,ozone,ozonesonde,tropopause fold},
number = {2},
