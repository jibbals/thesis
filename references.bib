doi = {10.5194/acpd-9-15891-2009},
file = {:home/jesse/Documents/Papers_MD/Vigouroux et al._2009_Ground-based FTIR and MAX-DOAS observations of formaldehyde at R{\'{e}}union Island and comparisons with satellite and.pdf:pdf},
isbn = {1680-7316},
