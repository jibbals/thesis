file = {:home/jesse/Documents/Papers_MD/Lamsal et al._2014_Evaluation of OMI operational standard NO 2 column retrievals using in situ and surface-based NO 2 observations.pdf:pdf},
journal = {Atmos. Chem. Phys},
pages = {11587--11609},
title = {{Evaluation of OMI operational standard NO 2 column retrievals using in situ and surface-based NO 2 observations}},
url = {www.atmos-chem-phys.net/14/11587/2014/},
