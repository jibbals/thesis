doi = {10.5194/acp-14-9855-2014},
file = {:home/jesse/Documents/Papers_MD/Thompson et al._2014_Tropospheric ozone increases over the southern Africa region Bellwether for rapid growth in Southern Hemisphere pol.pdf:pdf},
