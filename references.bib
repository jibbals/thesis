keywords = {Air quality impacts,Fire emissions,Ozone exceedances,Ozone photochemistry,Ozone production,Wildfires},
pages = {1--10},
publisher = {Elsevier Ltd},
title = {{Ozone production from wildfires: A critical review}},
url = {http://dx.doi.org/10.1016/j.atmosenv.2011.11.063},
