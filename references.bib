doi = {10.5194/acp-10-9681-2010},
isbn = {1096812010},
issn = {16807316},
journal = {Atmospheric Chemistry and Physics},
number = {19},
pages = {9681--9688},
title = {{Correlating tropospheric column ozone with tropopause folds: The Aura-OMI satellite data}},
volume = {10},
