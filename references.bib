doi = {10.5194/acp-12-10367-2012},
file = {:home/jesse/Documents/Papers_MD/Vigouroux et al._2012_FTIR time-series of biomass burning products (HCN, C2H6, C2H2, CH3OH, and HCOOH) at Reunion Island (21 S, 55 E) an.pdf:pdf},
