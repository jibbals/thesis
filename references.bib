issn = {2156-2202},
journal = {Journal of Geophysical Research},
keywords = {stratosphere to troposphere exchange,tropospheric ozone},
number = {D6},
title = {{One year ozonesonde measurements at Kerguelen Island (49.2S, 70.1E): Influence of stratosphere-to-troposphere exchange and long-range transport of biomass burning plumes}},
