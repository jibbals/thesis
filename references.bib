isbn = {0148-0227},
issn = {01480227},
journal = {Journal of Geophysical Research Atmospheres},
keywords = {atmospheric water vapor,climate change,doi:10.1029/2005JD006605,http://dx.doi.org/10.1029/2005JD006605,water vapor feedback},
number = {11},
pages = {1--14},
title = {{Global tropospheric ozone modeling: Quantifying errors due to grid resolution}},
volume = {111},
year = {2006}
}
