author = {Lin, Ying-Hsuan and Zhang, Haofei and Pye, Havala O T and Zhang, Zhenfa and Marth, Wendy J and Park, Sarah and Arashiro, Maiko and Cui, Tianqu and Budisulistiorini, Sri Hapsari and Sexton, Kenneth G and Vizuete, William and Xie, Ying and Luecken, Deborah J and Piletic, Ivan R and Edney, Edward O and Bartolotti, Libero J and Gold, Avram and Surratt, Jason D},
doi = {10.1073/pnas.1221150110},
