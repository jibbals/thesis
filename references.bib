doi = {10.5194/acpd-15-31587-2015},
file = {:home/jesse/Documents/Papers_MD/Wolfe et al._2015_Formaldehyde production from isoprene oxidation across NOx regimes.pdf:pdf},
issn = {1680-7375},
journal = {Atmospheric Chemistry and Physics Discussions},
