doi = {10.5194/acp-16-6997-2016},
file = {:home/jesse/Documents/Papers{\_}Mendeley//Emmerson et al.{\_}2016{\_}Current estimates of biogenic emissions from eucalypts uncertain for southeast Australia.pdf:pdf},
issn = {1680-7324},
