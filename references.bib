@article{Goldberg2018,
abstract = {This work presents a new high resolution NO2 dataset derived from the standard NASA Ozone Monitoring Instrument (OMI) NO2 version 3.0 retrieval that can be used to estimate surface level concentrations. The standard NASA product uses NO2 vertical profile shape factors from a 1.25°{\&}thinsp;×{\&}thinsp;1° ({\~{}}{\&}thinsp;110{\&}thinsp;×{\&}thinsp;110{\&}thinsp;km) resolution Global Model Initiative (GMI) model simulation to calculate air mass factors, a critical value used to determine observed tropospheric NO2 vertical columns. To better estimate vertical profile shape factors, we use a high resolution Community Multi-scale Air Quality (CMAQ) model simulation (1.33{\&}thinsp;×{\&}thinsp;1.33{\&}thinsp;km) to generate tropospheric air mass factors and tropospheric NO2 columns during summertime in the eastern United States. Results show OMI NO2 tropospheric columns in this new product increase by up to 160{\&}thinsp;{\%} in city centers, and decrease by 20{\&}ndash;50{\&}thinsp;{\%} in the rural areas outside of urban areas when compared to the operational product. This new product shows much better agreement with the Pandora NO2 spectrometer measurements acquired during the DISCOVER-AQ Maryland field campaign. Furthermore, the correlation between this satellite product and EPA NO2 monitors in urban areas has improved dramatically: r2{\&}thinsp;={\&}thinsp;0.60 in new product, r2{\&}thinsp;={\&}thinsp;0.39 in operational product, signifying that this new product is a better indicator of surface concentrations than the operational product. Our work emphasizes the need to use high resolution models to re-calculate satellite data in areas with large spatial heterogeneities in NOx emissions. Although the current work is focused on the eastern United States, the methodology developed in this work can be applied to other world regions to produce high-quality region-specific NO2 satellite retrievals.},
author = {Goldberg, Daniel L. and Lamsal, Lok N. and Loughner, Christopher P. and Swartz, William H. and Lu, Zifeng and Streets, David G.},
doi = {10.5194/acp-17-11403-2017},
isbn = {1680-7324},
issn = {16807324},
journal = {Atmospheric Chemistry and Physics},
number = {18},
pages = {11403--11421},
title = {{A high-resolution and observationally constrained OMI NO2 satellite retrieval}},
volume = {17},
year = {2017}
}
@article{Zeng2017a,
abstract = {{\textless}p{\textgreater}Ozone (O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}) trends and variability from a 28-year (1987{\&}ndash;2014) ozonesonde record at Lauder, New Zealand, have been analysed and interpreted using a statistical model and a global chemistry-climate model (CCM). Lauder is a clean rural measurement site often representative of the Southern Hemisphere (SH) mid-latitude background atmosphere. O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} trends over this period at this location are characterised by a significant positive trend below 6{\&}thinsp;km, a significant negative trend in the tropopause region and the lower stratosphere between 9 to 15{\&}thinsp;km, and no significant trend in the free troposphere (6{\&}ndash;9{\&}thinsp;km) and the stratosphere above 15{\&}thinsp;km. We find that significant positive trends in lower tropospheric ozone are correlated with increasing temperature and decreasing relative humidity at the surface over this period, whereas significant negative trends in the upper troposphere and the lower stratosphere appear to be strongly linked to an upward trend of the tropopause height, associated with increasing greenhouse gases. Relative humidity and the tropopause height also dominate O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} variability at Lauder in the lower troposphere and the tropopause region, respectively. We perform an attribution of these trends to anthropogenic forcings including O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} precursors, greenhouse gases (GHGs), and O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} depleting substances (ODSs), using CCM simulations. Results indicate that changes in anthropogenic O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} precursors contribute significantly to stratospheric O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} reduction, changes in ODSs contribute significantly to tropospheric O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} reduction, and increased GHGs contribute significantly to stratospheric O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} increases at Lauder. Methane (CH{\textless}sub{\textgreater}4{\textless}/sub{\textgreater}) likely contributes positively to O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} trends in both the troposphere and the stratosphere, but the contribution is not significant at the 95{\&}thinsp;{\%} confidence level over this period. An extended analysis of CCM results covering 1960{\&}ndash;2010 (i.e. starting well before the observations) reveals significant contributions from all forcings to O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} trends at Lauder, i.e., increases of GHGs and the increase of CH{\textless}sub{\textgreater}4{\textless}/sub{\textgreater} alone all contribute significantly to O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} increases, net increases of ODSs lead to O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} reduction, and increases of non-methane O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} precursors cause O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} increases in the troposphere and reductions in the stratosphere. This study suggests that a long-term ozonesonde record obtained at a SH mid-latitude background site (corroborated by a surface O{\textless}sub{\textgreater}3{\textless}/sub{\textgreater} record at a nearby SH mid-latitude site, Baring Head, which also shows a significant positive trend) is a useful indicator for detecting atmospheric composition and climate change associated with human activities.{\textless}/p{\textgreater}},
author = {Zeng, Guang and Morgenstern, Olaf and Shiona, Hisako and Thomas, Alan J. and Querel, Richard R. and Nichol, Sylvia E.},
doi = {10.5194/acp-17-10495-2017},
file = {:home/jesse/Dropbox/PHD/References/Zeng et al.{\_}2017{\_}Attribution of recent ozone changes in the Southern Hemisphere mid-latitudes using statistical analysis and chemistry-c.pdf:pdf},
isbn = {1680-7316},
issn = {16807324},
journal = {Atmospheric Chemistry and Physics},
number = {17},
pages = {10495--10513},
title = {{Attribution of recent ozone changes in the Southern Hemisphere mid-latitudes using statistical analysis and chemistry-climate model simulations}},
volume = {17},
year = {2017}
}
