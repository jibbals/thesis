isbn = {2169-897x},
issn = {21698996},
journal = {Journal of Geophysical Research Atmospheres},
keywords = {ERA-Interim,climatology,extreme weather,tropopause fold},
number = {10},
pages = {4860--4877},
title = {{Tropopause folds in ERA-Interim: Global climatology and relation to extreme weather events}},
